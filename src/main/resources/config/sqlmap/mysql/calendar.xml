<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.lac.repository.mapper.ScheduleMapper">
	<resultMap id="scheduleMap" type="schedule">
		<result column="sch_no" property="schNo"></result>
		<result column="user_no" property="userNo"></result>
		<result column="start_date" property="startDate"></result>
		<result column="end_date" property="endDate"></result>
		<result column="sch_detail" property="schDetail"></result>
		<result column="sch_color" property="schColor"></result>
	</resultMap>
	<select id="selectScheduleByDate" resultMap="scheduleMap">
		select *
		from
		tb_schedule
		where stat_date=#{statDate} or end_date=#{endDate}
	</select>

	<!--새 일정 추가 -->
	<insert id="insertSchedule" parameterType="schedule">
		insert into tb_schedule(
			user_no, 
			start_date,  
			end_date, 
			sch_detail,
			sch_color
		)
		values(
			#{userNo},
			#{startDate}, 
			#{endDate}, 
			#{schDetail},
			#{schColor}
		);
	</insert>

	<!-- /*일정편집*/ -->
	<update id="updateSchedule" parameterType="schedule">
		update tb_schedule
		set start_date = #{startDate},
		end_date = #{endDate},
		sch_detail = #{schDetail},
		sch_color =
		#{schColor}
		where sch_no = #{schNo}
	</update>

	<!-- /*일정삭제*/ -->
	<delete id="deleteSchedule" parameterType="int">
		delete
		from tb_schedule
		where sch_no = #{schNo}
	</delete>
</mapper>